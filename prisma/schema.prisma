generator client {
  provider = "prisma-client"
  output   = "../generated/prisma-client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(cuid())
  firstName    String
  lastName     String
  username     String
  phoneNumber  String        @unique
  password     String
  role         UserRole      @default(USER)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  isVerified   Boolean       @default(false)
  enrollments  Enrollment[]
  purchases    Purchase[]
  transactions Transaction[]

  @@map("users")
}

model Teacher {
  id        String          @id @default(cuid())
  name      String
  bio       String?
  image     String?
  subjects  String[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  courses   CourseTeacher[]

  @@map("teachers")
}

model Course {
  id               String          @id @default(cuid())
  thumbnail        String?
  title            String
  description      String?
  price            Float
  totalClasses     Int             @default(0)
  totalExams       Int             @default(0)
  overview         String?
  routineImage     String?
  courseOutlineUrl String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  subjects         CourseSubject[]
  teachers         CourseTeacher[]
  enrollments      Enrollment[]

  @@map("courses")
}

model CourseTeacher {
  courseId  String
  teacherId String
  course    Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  teacher   Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@id([courseId, teacherId])
  @@map("course_teachers")
}

model CourseSubject {
  id        String   @id @default(cuid())
  name      String
  courseId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons   Lesson[]

  @@map("course_subjects")
}

model Lesson {
  id          String        @id @default(cuid())
  title       String
  description String?
  subjectId   String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  pdfUrl      String?
  subject     CourseSubject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@map("lessons")
}

model Book {
  id          String     @id @default(cuid())
  thumbnail   String?
  title       String
  description String?
  price       Float
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  purchases   Purchase[]

  @@map("books")
}

model Enrollment {
  id        String           @id @default(cuid())
  userId    String
  courseId  String
  status    EnrollmentStatus @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  course    Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("enrollments")
}

model Purchase {
  id        String           @id @default(cuid())
  userId    String
  bookId    String
  status    EnrollmentStatus @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  book      Book             @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("purchases")
}

model Transaction {
  id            String            @id @default(cuid())
  transactionId String            @unique
  phoneNumber   String
  userId        String?
  courseId      String?
  bookId        String?
  status        TransactionStatus @default(PENDING)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  user          User?             @relation(fields: [userId], references: [id])

  @@map("transactions")
}

enum UserRole {
  USER
  ADMIN
}

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum EnrollmentStatus {
  PENDING
  APPROVED
  REJECTED
}
